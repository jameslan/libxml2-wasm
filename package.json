{
    "name": "libxml2-wasm",
    "version": "0.0.6",
    "description": "Bring libxml2 to browsers using WebAssembly",
    "scripts": {
        "wasm": "gulp rebuild",
        "unit": "mocha",
        "test": "npm run cov && npm run lint",
        "cov": "c8 npm run unit",
        "build": "npm run wasm && tsc --declaration",
        "lint": "eslint src/* test/*",
        "doc": "typedoc",
        "docwatch": "typedoc --watch",
        "watch": "tsc --declaration --watch"
    },
    "repository": {
        "type": "git",
        "url": "git@github.com:jameslan/libxml2-wasm.git"
    },
    "main": "lib/index.mjs",
    "author": "James Lan",
    "license": "MIT",
    "files": [
        "lib/*"
    ],
    "devDependencies": {
        "@babel/core": "^7.22.15",
        "@babel/preset-env": "^7.22.15",
        "@babel/register": "^7.22.15",
        "@types/chai": "^4.3.6",
        "@types/chai-sorted": "^0.2.2",
        "@types/mocha": "^10.0.1",
        "@types/node": "^20.4.5",
        "@types/yargs": "^17.0.24",
        "c8": "^8.0.1",
        "chai": "^4.3.8",
        "chai-sorted": "^0.2.0",
        "eslint": "^8.50.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-airbnb-typescript": "^17.1.0",
        "eslint-import-resolver-typescript": "^3.6.1",
        "eslint-plugin-chai-friendly": "^0.7.2",
        "eslint-plugin-import": "^2.28.1",
        "gulp": "^4.0.2",
        "mocha": "^10.2.0",
        "ts-node": "^10.9.1",
        "typedoc": "^0.24.8",
        "typescript": "^5.1.6",
        "yargs": "^17.7.2"
    },
    "engines": {
        "node": ">=14.8.0"
    }
}
