{
  "include": ["./src/*", "./out/*", "./test/**/*"],
  "compilerOptions": {
    /* Projects */
    "incremental": true,
    "tsBuildInfoFile": "./.tsbuildinfo",

    /* Language and Environment */
    "target": "es2021",
    "lib": [
      "es2021",
      "esnext.disposable"
    ],

    /* Modules */
    "module": "es2022",
    "moduleResolution": "node",
    "paths": {
      "@libxml2-wasm/*": ["./*"]
    },
    "rootDirs": ["./src", "./out"],

    /* Emit */
    "sourceMap": true,
    "outDir": "./lib",
    "stripInternal": true,

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true
  }
}
